{
    "name": "ylsideas/laravel-additions",
    "description": "A package of customisations for the Laravel Framework",
    "keywords": [
        "ylsideas",
        "laravel"
    ],
    "homepage": "https://github.com/ylsideas/laravel-additions",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Peter Fox",
            "email": "peter.fox@ylsideas.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "illuminate/support": "^7.0",
        "nunomaduro/laravel-mojito": "^0.2.4"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "YlsIdeas\\LaravelAdditions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YlsIdeas\\LaravelAdditions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "YlsIdeas\\LaravelAdditions\\LaravelAdditionsServiceProvider"
            ]
        }
    }
}
